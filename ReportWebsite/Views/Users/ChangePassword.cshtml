@using ReportWebsite.Infrastructure;
@using ReportWebsite.Properties
@using Dualp.Common.Types
@using ReportWebsite.UtilitySystem
@using ReportWebsite.Models

@model  ReportWebsite.Models.PasswordModel

@{
    ViewBag.Title = "تغییر رمز عبور";
    Layout = "~/Views/Shared/_LayoutSingle.cshtml";
    int userid = ViewBag.userid;
}


<div class="app-content container center-layout mt-2">
    <div class="content-wrapper">
        <div class="content-header row">
        </div>
        <div class="content-body">
            <section class="flexbox-container">
                <div class="col-12 d-flex align-items-center justify-content-center">
                    <div class="col-md-4 col-10 box-shadow-2 p-0">
                        <div class="card border-grey border-lighten-3 px-1 py-1 m-0">
                            <div class="card-header border-0">
                                <div class="card-title text-center">
                                    <h3>  @ViewBag.user</h3>
                                    <img style="display: none; width: 205px;" src="~/Template/Contents/images/portrait/medium/logo-pd.png" alt="avatar" />
                                </div>

                            </div>
                            @using (Html.BeginForm("ChangePassword", "Users", FormMethod.Post))
                            {
                                @Html.Hidden("inituserid", userid)
                                @Html.Hidden("issuperadmin", true)
                                <div class="card-content">
                                    <div class="card-body">
                                        <form class="form-horizontal" action="index.html" novalidate>
                                            @if (User.IsInRole("Admin"))
                                            {
                                                @Html.Hidden("issuperadmin", false)

                                                <fieldset class="form-group position-relative has-icon-left">

                                                    @Html.PasswordFor(m => m.OldPassword, new { @class = "form-control", id = "OldPassword", placeholder = "رمز عبور فعلی" })

                                                    <div class="form-control-position">
                                                        <i class="ft-user"></i>
                                                    </div>
                                                </fieldset>
                                            }
                                            <fieldset class="form-group position-relative has-icon-left">
                                                @Html.PasswordFor(m => m.NewPassword, new { @class = "form-control", id = "NewPassword", placeholder = "رمزعبور جدید" })
                                                <div class="form-control-position">
                                                    <i class="fa fa-key"></i>
                                                </div>
                                            </fieldset>
                                            <fieldset class="form-group position-relative has-icon-left">
                                                @Html.PasswordFor(m => m.RepeatPassword, new { @class = "form-control", id = "RepeatPassword", placeholder = "تکرار رمزعبور " })
                                                <div class="form-control-position">
                                                    <i class="fa fa-key"></i>
                                                </div>
                                            </fieldset>
                                            <div class="form-group row">
                                                <div class="col-md-12 col-12 text-center text-sm-left">
                                                    <fieldset>

                                                        <label for="remember-me">  </label>
                                                        <label class="error" for="message-me">
                                                            @Html.ValidationMessage("LockError")
                                                        </label>
                                                    </fieldset>
                                                </div>
                                            </div>
                                            <button type="submit" class="btn btn-outline-primary btn-block"><i class="ft-unlock"></i> ذخیره</button>
                                            <button style="display:none" type="submit" class="btn btn-outline-primary btn-block"><i class="ft-unlock"></i>  لغو</button>
                                        </form>
                                    </div>
                                </div>
                            }
                        </div>
                    </div>
                </div>
            </section>
        </div>
    </div>
</div>

